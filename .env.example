# Example environment configuration
# Connection string for MongoDB
MONGODB_URI=mongodb://localhost:27017/ar

# Secret key used to sign JWT tokens for API authentication
JWT_SECRET=
# Status code when JWT_SECRET is missing (default 500)
JWT_MISSING_STATUS=
# Optional analytics endpoint
VITE_ANALYTICS_ENDPOINT=
# Optional external model URL
VITE_MODEL_URL=
# Base URL for API requests when building the frontend
VITE_API_BASE_URL=
# Cloudflare R2 / S3 credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
R2_ENDPOINT=
R2_BUCKET=

# Allowed origins for CORS, comma-separated
FRONTEND_ORIGINS=

# Port for API server (default 3000; Render.com uses 10000)
PORT=3000
